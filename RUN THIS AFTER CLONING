cd ~/px4_ros_ws3
./setup_after_clone.sh






# if you did not already install px4 previously, run
bash ./PX4-Autopilot/Tools/setup/ubuntu.sh





# install ROS2 humble

sudo apt update && sudo apt install locales
sudo locale-gen en_US en_US.UTF-8
sudo update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8
export LANG=en_US.UTF-8
sudo apt install software-properties-common
sudo add-apt-repository universe
sudo apt update && sudo apt install curl -y
sudo curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg
echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(. /etc/os-release && echo $UBUNTU_CODENAME) main" | sudo tee /etc/apt/sources.list.d/ros2.list > /dev/null
sudo apt update && sudo apt upgrade -y
sudo apt install ros-humble-desktop
sudo apt install ros-dev-tools
source /opt/ros/humble/setup.bash && echo "source /opt/ros/humble/setup.bash" >> .bashrc


# then run
pip install --user -U empy==3.3.4 pyros-genmsg setuptools



# then run this if you don't see scanlines in rviz

sudo apt install ros-humble-ros-gzharmonic




# python navigator might need this
# 1) source ROS
source /opt/ros/humble/setup.bash

# 2) go to workspace and install deps
cd ~/px4_ros_ws3
rosdep install -i --from-path src --rosdistro humble -y

# 3) build the package (and its message dependency)
colcon build --symlink-install --packages-select px4_msgs px4_ros_com

# 4) source overlay and verify
source install/setup.bash
ros2 pkg list | grep px4_ros_com || true
ros2 run px4_ros_com maze_navigator.py


# install micro xrce-dds
git clone -b v2.4.3 https://github.com/eProsima/Micro-XRCE-DDS-Agent.git
cd Micro-XRCE-DDS-Agent
mkdir build
cd build
cmake ..
make
sudo make install
sudo ldconfig /usr/local/lib/

# to start it

MicroXRCEAgent udp4 -p 8888




