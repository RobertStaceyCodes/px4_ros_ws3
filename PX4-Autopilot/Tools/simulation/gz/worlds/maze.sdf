    </model>

    <!-- Interior divider 1 — anchored to south wall, opens north
         Spans y = -13.5 .. +7.5  (length 21 m, centre y = -3.0)
         Gap:  y = +7.5 .. +13.5  (6 m opening in the NORTH half) -->
    <model name="wall_1">
      <static>true</static>
      <pose>6 -3.0 3 0 0 0</pose>
      <link name="link">
        <collision name="c"><geometry><box><size>1 21 6</size></box></geometry></collision>
        <visual name="v"><geometry><box><size>1 21 6</size></box></geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Interior divider 2 — anchored to north wall, opens south
         Spans y = -7.5 .. +13.5  (length 21 m, centre y = +3.0)
         Gap:  y = -13.5 .. -7.5  (6 m opening in the SOUTH half) -->
    <model name="wall_2">
      <static>true</static>
      <pose>13 3.0 3 0 0 0</pose>
      <link name="link">
        <collision name="c"><geometry><box><size>1 21 6</size></box></geometry></collision>
